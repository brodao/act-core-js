		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^3.1.1"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"snapshotSerializers": [
			"act-jest-snapshot-console"
