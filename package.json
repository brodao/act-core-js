{
	"name": "@brodao/act-core-nod",
	"version": "0.0.0",
	"description": "Rotinas de uso geral, compartilhadas com outros projetos 'AC Ferramentas'.",
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/brodao/act-core-nod",
	"repository": {
		"type": "git",
		"url": "https://github.com/brodao/act-core-nod.git"
	},
	"author": {
		"name": "Alan CÃ¢ndido",
		"email": "brodao@gmail.com",
		"url": "https://github.com/brodao"
	},
	"contributors": [],
	"keywords": [
		"TDS",
		"ADVPL",
		"Protheus",
		"Wizard"
	],
	"files": [
		"lib"
	],
	"main": "lib/index",
	"types": "lib/index",
	"scripts": {
		"clean": "rimraf lib && rimraf coverage",
		"format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
		"lint": "tslint --force --format verbose \"src/**/*.ts\"",
		"prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
		"build": "tsc --pretty",
		"test": "jest",
		"coverage": "jest --coverage",
		"watch": "npm run build -- --watch",
		"watch:test": "jest --watch",
		"prepublishOnly": "npm run build",
		"publish": "npm publish",
		"release": "standard-version",
		"tag": "git push --follow-tags origin master",
		"nb": "npm run release -- --prerelease nb"
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"commander": "^6.0.0"
	},
	"devDependencies": {
		"@types/node": "^14.0.27",
		"@types/jest": "^26.0.9",
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@zeit/ncc": "^0.22.3",
		"all-contributors-cli": "^6.17.0",
		"coveralls": "^3.0.2",
		"got": "^11.1.3",
		"husky": "^4.2.5",
		"jest": "^26.2.2",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"standard-version": "^8.0.2",
		"ts-jest": "^26.1.4",
		"ts-node": "^8.10.2",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^3.1.1"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"preset": "ts-jest"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"xhusky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
