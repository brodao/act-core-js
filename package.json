{
	"name": "@brodao/act-core-nod",
	"version": "0.0.1",
	"description": "Rotinas de uso geral.",
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/brodao/act-core-nod",
	"repository": {
		"type": "git",
		"url": "https://github.com/brodao/act-core-nod.git"
	},
	"author": {
		"name": "Alan CÃ¢ndido",
		"email": "brodao@gmail.com",
		"url": "https://github.com/brodao"
	},
	"contributors": [],
	"keywords": [],
	"files": [
		"lib"
	],
	"main": "lib/index",
	"types": "lib/index",
	"scripts": {
		"clean": "rimraf lib && rimraf coverage",
		"format": "prettier --write \"{src,tests}/**/*.ts\" --single-quote --trailing-comma es5",
		"lint": "tslint --force --format verbose \"src/**/*.ts\"",
		"prebuild": "npm run clean && echo Using TypeScript && tsc --version",
		"build": "tsc --pretty",
		"watch": "npm run build -- --watch",
		"watch:test": "jest --watch",
		"------": "",
		"test": "npm run build && jest",
		"test:snapshot": "npm test -- -u",
		"test:coverage": "npm test -- --coverage",
		"-------": "",
		"prepare": "npm run format && npm run lint && npm run build && npm run test",
		"release": "standard-version",
		"release:rc": "npm run release -- --prerelease rc",
		"tag": "git push --follow-tags",
		"prepublishOnly": "npm run test",
		"publish": "npm publish",
		"--------": "",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"act:link": "npm link ..\\act-jest-snapshot-console"
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"commander": "^6.0.0"
	},
	"devDependencies": {
		"@brodao/act-jest-snapshot-console": "^1.0.2",
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@types/jest": "^26.0.10",
		"@types/node": "^14.0.27",
		"all-contributors-cli": "^6.17.1",
		"husky": "^4.2.5",
		"jest": "^26.4.0",
		"prettier": "^2.0.5",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.2.0",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^3.1.1"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"snapshotSerializers": [
			"act-jest-snapshot-console"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
